<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  app:cardCornerRadius="8dp"
  app:cardElevation="2dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header: Student Name + Status Badge -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nguyen Van A"
        android:textColor="#23437B"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tvActiveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#4CAF50"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="Active"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    </LinearLayout>

    <!-- Student ID -->
    <TextView
      android:id="@+id/tvStudentId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="HE170188"
      android:textColor="#666666"
      android:textSize="14sp" />

    <!-- Enrolled Subjects -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrolled Subjects:"
        android:textColor="#666666"
        android:textSize="12sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tvEnrolledSubjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PRM392, SWP391"
        android:textColor="#333333"
        android:textSize="14sp" />

    </LinearLayout>

    <!-- Enrollment Date -->
    <TextView
      android:id="@+id/tvEnrolledDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Enrolled: 01/11/2024"
      android:textColor="#999999"
      android:textSize="12sp" />

    <!-- Action Buttons -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:gravity="end"
      android:orientation="horizontal">

      <Button
        android:id="@+id/btnViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_outline"
        android:minWidth="80dp"
        android:text="Details"
        android:textAllCaps="false"
        android:textColor="#23437B"
        android:textSize="14sp" />

      <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/button_outline"
        android:backgroundTint="#D32F2F"
        android:minWidth="80dp"
        android:text="Remove"
        android:textAllCaps="false"
        android:textColor="#D32F2F"
        android:textSize="14sp" />

    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>