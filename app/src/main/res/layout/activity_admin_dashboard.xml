<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F5F5F5"
  tools:context=".AdminDashboardActivity">

    <!-- Header Layout với menu button và logo FPT -->
    <LinearLayout
      android:id="@+id/headerLayout"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="#FFC107"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      android:paddingTop="30dp"
      app:layout_constraintTop_toTopOf="parent">

        <ImageButton
          android:id="@+id/menuButton"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@android:color/transparent"
          android:src="@drawable/ic_menu"
          android:contentDescription="Menu"
          app:tint="#FFFFFF" />

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center">

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/logofpt"
              android:adjustViewBounds="true"
              android:maxWidth="160dp"
              android:contentDescription="FPT University Logo" />
        </LinearLayout>
    </LinearLayout>

    <!-- ScrollView chứa nội dung chính -->
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/headerLayout"
      app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">

            <!-- Phần Notification and Application status -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Notification and Application status"
              android:textColor="#23437B"
              android:textStyle="bold"
              android:textSize="20sp"
              android:layout_marginTop="8dp" />

            <View
              android:layout_width="80dp"
              android:layout_height="3dp"
              android:background="#23437B"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="16dp" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                  android:id="@+id/cardStatistic"
                  android:layout_width="0dp"
                  android:layout_height="140dp"
                  android:layout_weight="1"
                  android:layout_marginEnd="8dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:padding="16dp">

                        <ImageView
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:contentDescription="Notification Icon" />
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Notification"
                          android:textColor="#F49D00"
                          android:textStyle="bold"
                          android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                  android:layout_width="0dp"
                  android:layout_height="140dp"
                  android:layout_weight="1"
                  android:layout_marginStart="8dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:padding="16dp">

                        <ImageView
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:contentDescription="Application Status Icon" />
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Application status"
                          android:textColor="#F49D00"
                          android:textStyle="bold"
                          android:layout_marginTop="8dp"
                          android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Phần Admin Management -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Admin Management"
              android:textColor="#23437B"
              android:textStyle="bold"
              android:textSize="20sp"
              android:layout_marginTop="16dp" />

            <View
              android:layout_width="80dp"
              android:layout_height="3dp"
              android:background="#23437B"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="16dp" />

            <!-- Hàng đầu tiên: Account và Subject Management -->
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="16dp">

                <!-- CardView cho Account Management -->
                <androidx.cardview.widget.CardView
                  android:id="@+id/cardAccountManagement"
                  android:layout_width="0dp"
                  android:layout_height="140dp"
                  android:layout_weight="1"
                  android:layout_marginEnd="8dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:padding="16dp">

                        <ImageView
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:src="@drawable/ic_person"
                          android:contentDescription="Account Management Icon" />

                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Account Management"
                          android:textColor="#F49D00"
                          android:textStyle="bold"
                          android:layout_marginTop="8dp"
                          android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView cho Subject Management -->
                <androidx.cardview.widget.CardView
                  android:id="@+id/cardSubjectManagement"
                  android:layout_width="0dp"
                  android:layout_height="140dp"
                  android:layout_weight="1"
                  android:layout_marginStart="8dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="4dp"
                  android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:padding="16dp">

                        <ImageView
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:src="@drawable/ic_person"
                          android:contentDescription="Subject Management Icon" />

                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Subject Management"
                          android:textColor="#F49D00"
                          android:textStyle="bold"
                          android:layout_marginTop="8dp"
                          android:textAlignment="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Hàng thứ hai: Class Management (căn giữa) -->
            <androidx.cardview.widget.CardView
              android:id="@+id/cardClassManagement"
              android:layout_width="160dp"
              android:layout_height="140dp"
              android:layout_gravity="center_horizontal"
              app:cardCornerRadius="10dp"
              app:cardElevation="4dp"
              android:foreground="?android:attr/selectableItemBackground"
              android:layout_marginBottom="16dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="16dp">

                    <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/ic_person"
                      android:contentDescription="Class Management Icon" />

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Class Management"
                      android:textColor="#F49D00"
                      android:textStyle="bold"
                      android:layout_marginTop="8dp"
                      android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- View footer để giữ khoảng cách -->
            <View
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:background="#FFC107"
              android:layout_marginTop="-16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigationView"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="#FFC107"
      app:itemIconTint="#FFFFFF"
      app:itemTextColor="#FFFFFF"
      app:labelVisibilityMode="unlabeled"
      app:menu="@menu/bottom_nav_menu"
      app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>